# ============================================================================
# INVENTORY MANAGEMENT SYSTEM - Environment Configuration
# ============================================================================

# ────────────────────────────────
# 🔧 Server Configuration
# ────────────────────────────────
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# ────────────────────────────────
# 🗄️ Database Connection
# ────────────────────────────────
INVENTORY_DATABASE_URL=postgresql://postgres:password@localhost:5432/inventory_db?schema=public

# ────────────────────────────────
# 🔐 Security and Auth Config
# ────────────────────────────────
# Enable/Disable JWT Authentication (true/false)
ENABLE_JWT_AUTH=true

# JWT Secret (minimum 32 characters)
JWT_SECRET=8f7b3a2c9d4e6f8a0b1c2d3e4f5g6h7i
JWT_EXPIRES_IN=8h

# ────────────────────────────────
# 🔗 Microservices Integration
# ────────────────────────────────
# This service's URL (Inventory)
INVENTORY_API_URL=http://localhost:5000

# Finance Service
FINANCE_API_URL=http://localhost:4000
FINANCE_SERVICE_API_KEY=FINANCE_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# HR Service (for employee data)
HR_API_URL=http://localhost:3002
HR_SERVICE_API_KEY=HR_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# Audit Logs Microservice
AUDIT_API_URL=http://localhost:4004
AUDIT_SERVICE_API_KEY=AUDIT_SERVICE_SECRET_KEY_CHANGE_IN_PRODUCTION

# ────────────────────────────────
# 🚀 Redis Cache Configuration
# ────────────────────────────────
ENABLE_CACHE=true
REDIS_URL=redis://localhost:6379

# ────────────────────────────────
# 🌐 CORS Configuration
# ────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4000,http://localhost:4001,http://localhost:4004

# ────────────────────────────────
# 🛡️ Rate Limiting
# ────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ────────────────────────────────
# 📝 Logging Configuration
# ────────────────────────────────
LOG_LEVEL=info
LOG_FILE=./logs/inventory.log
